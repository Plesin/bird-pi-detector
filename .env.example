# Pi Configuration
PI_HOST=user@pi-ip-address
PI_PATH=/path/to/bird-pi-detector

# Mac Configuration
LOCAL_PATH=/path/to/local/bird-pi-detector

# Python command on Pi
PYTHON_CMD=python3

# Files/folders to exclude from rsync (space-separated)
EXCLUDES="media .git __pycache__ .venv *.pyc .DS_Store"

# By Camera Type: pi_hq or usb_webcam
CAMERA_TYPE=pi_hq